{% extends "base.html.twig" %}

{% block body %}
    <section>
        <div class="row">
            <video width="320" height="240" controls>
                <source src="{{ movieTopRated.videoUrl }}" type="video/mp4">
            </video>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="form-check col-md-3">
                {% for genre in listGrenres.genres %}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="genre_{{ genre.name }}" id="genre_{{ genre.id }}">
                        <label class="form-check-label" for="genre_{{ genre.id }}">{{ genre.name }}</label>
                    </div>
                {% endfor %}
            </div>
            <div id="top_rated_movies" class="col-md-9">
                {% for movie in bestMovies.data.results %}
                    <div class="card">
                        <div class="row card-body">
                            <div class="col-sm-3">
                                <img src="{{ bestMovies.base_url ~ movie.poster_path }}" alt="minimal-size">
                            </div>
                            <div class="col-sm-8">
                                <h5 class="card-title">{{ movie.title }}</h5>
                                <p class="card-text">{{ movie.overview }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}